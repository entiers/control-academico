<%-- any content can be specified here e.g.: --%>
<%@ page pageEncoding="UTF-8" %>

<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<!-- La funciÃ³n validar debe estar declarada en donde se agregue este script -->

<script type="text/javascript">
    $(function() {
        $("#verReporte").dialog({
            autoOpen: false,
            modal: true,
            width: 550,

            buttons: {
                "<fmt:message key="btnSalir" />" : function() {
                    $(this).dialog('close');
                }, "<fmt:message key="btnImprimir" />" : function() {

                    if(validar()){
                        $("#formVerReporte").submit();
                    }
                    
                }
            }
        });

        $("#botonVerReporte").click( function(){
            $("#verReporte").dialog("open");
        });


        $("#errorFormulario").dialog({
            autoOpen:false,
            modeal:true,

            buttons:{
                "<fmt:message key="btnCancelar" />":function(){
                    $(this).dialog("close");
                }
            }

        });
    });  

</script>