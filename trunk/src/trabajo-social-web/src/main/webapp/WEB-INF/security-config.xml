                <user name="usuario1" password="password1" authorities="ROLE_USER, ROLE_ADMIN" />
                <user name="usuario2" password="password2" authorities="ROLE_USER" />
            </user-service>
        </authentication-provider>
    </authentication-manager>
    -->
</beans:beans>
