<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/mvc
            http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">


    <!-- ·······································································
    ··· Se habilita la configuracion por medio de anotaciones
    ········································································ -->
    <mvc:annotation-driven />


    <!-- ·······································································
    ··· Mapeo entre la vistas (paginas web) y su nombre logico
    ········································································ -->
    <mvc:view-controller path="welcome.htm" view-name="welcome" />
    <mvc:view-controller path="index.htm" view-name="index" />

    <!-- paginas de la seccion de logeo -->
    <mvc:view-controller path="login.htm" view-name="login/login" />
    <mvc:view-controller path="accesoDenegado.htm" view-name="login/accesoDenegado" />

    <!-- paginas de la seccion de estudiantes
    <mvc:view-controller path="agregarEstudiante.htm" view-name="estudiante/agregar" />
    <mvc:view-controller path="editarEstudiante.htm" view-name="estudiante/editar" />
    <mvc:view-controller path="resultadoEstudiante.htm" view-name="estudiante/resultado" />
    <mvc:view-controller path="listarEstudiante.htm" view-name="estudiante/listar" />
    <mvc:view-controller path="listarEstudiante.htm/availability" view-name="estudiante/listar" />
    -->

    <!-- ·······································································
    ··· Configuracion de interceptores
    ········································································ -->
    <mvc:interceptors>
        <!-- Cambia la localidad cuando el parametro de request 'locale' es enviado e.g. /?locale=es -->
	<bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor" />
    </mvc:interceptors>


    <!-- ·······································································
    ··· Almacena la localidad en una cookie
    ········································································ -->
    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver" />


    <!-- ·······································································
    ··· Se encarga de resolver los nombres para las vistas
    ········································································ -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <!-- indica la ubicacion de las vistas -->
	<property name="prefix" value="/vistas/jsp/"/>

        <!-- indica la extension de las vistas -->
	<property name="suffix" value=".jsp"/>
    </bean>
</beans>